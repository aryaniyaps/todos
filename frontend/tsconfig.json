{
    "compilerOptions": {
        "target": "es6",
        "lib": ["dom", "es2017", "esnext", "es2018.promise"],
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "es2020",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "noEmit": false,
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
